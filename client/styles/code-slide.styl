> *
  position: absolute
> .text
  height: textHeight
  left: 0
  right: 0
  top: 0
  line-height: 20px
> .coffeescript
  left: 0
  right: 50%
  top: textHeight
  resize: none
  border: none
  bottom: outputHeight
  // &:focus
  //   outline: none
  //   box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5)
> .error
  top: textHeight
  left: 50%
  right: 0
  height: lineHeight
  color: #888
  text-align: right
  padding: 0 defaultPadding
  &.bad
    color: #f00
> .javascript
  left: 50%
  right: 0
  top: textHeight + lineHeight
  bottom: outputHeight
  overflow-y: auto
  overflow-x: hidden
  white-space: pre-wrap

> .coffeescript, > .javascript, > .output, > .text
  padding: defaultPadding

> .coffeescript, > .javascript, > .error, > .output
  font-family: Menlo, Consolas, monospace
  font-size: 13px
  line-height: lineHeight

> .output
  height: outputHeight
  bottom: 0
  width: 100%
  overflow-x: hidden
  overflow-y: auto
  > .error
    color: #f00
